/* 上传图片区 */
button {
  width: 100%;
  margin-top: 30rpx;
}

.container-img {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 5px;
  box-sizing: border-box;
}

.feature-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
}

.pic {
  width: 50%;
  overflow: hidden;
  text-align: center;
}

.pic_img {
  margin: 2rpx;
  width: 98%;
  position: relative;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
}

/* 上传附件区 */
/* .container-file{
  
} */
.file-box {
  width: 80%;
  margin: 0px auto;
  background-color: white;
  border-radius: 1ch;
  display: flex;
  align-items: center;
  padding-top: 5px;
  position: relative;
  box-shadow: 0 4px 5px rgba(0, 0, 0, 0.2);
}

.file-left {
  width: 30%;
  height: 100%;
  text-align: center;
}

.file-right {
  overflow: hidden;
}

/* 下拉列表 */
.select_box {
  background: #fff;
  width: 80%;
  margin-right: 5px;
  /* position: relative; */
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 30rpx;
  flex: 1;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  /* position: absolute; */
  top: 70rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

