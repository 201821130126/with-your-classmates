.weui-search-bar {

    padding: 8px 10px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    background-color: #EFEFF4;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__form {
  position: relative; 
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
  display: flex;
}

.weui-search-bar__box {
    width: 80%;
    box-sizing: border-box;
    z-index: 1;
    padding-left: 10px;
    margin-top: 5px;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  /* width:10px; */
}

.search-btn {
