/* 设置蓝色区域背景颜色 */
.close {
  width: 50rpx;
  height: 50rpx;
  float: right;
  overflow: hidden;
  color:black;
  display: absolute;
}
#header {
  display:flex ;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
  background-color: #EFEFF4;
