.tag {

  font-size: 12px;
  font-weight: 400;
  background-color: #d8ac9c;
  padding-left: 7px;
  padding-right: 7px;
  color: white;
  border-radius: 10px;
  display: inline-flex;
  align-items: center;
  margin: 0 5px;

}

ec-canvas {
  width: 100%;
  height: 100%;
}

.container {
  position: absolute;
  top: 10%;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}